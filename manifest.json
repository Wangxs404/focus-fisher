{
  "manifest_version": 3,
  "name": "Fish Timer - Swimming Fish Clock",
  "version": "1.0.0",
  "description": "A relaxing side panel with swimming stick-figure fish and a real-time clock",
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fish Timer Settings"
  },
  "icons": {
    "16": "assets/icon-16.svg",
    "48": "assets/icon-48.svg",
    "128": "assets/icon-128.svg"
  },
  "background": {
    "service_worker": "background.js"
  }
}